<div class="container">

  <div class="row">
    <div class="col" id="devBurgs">

      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}


    </div>
    <div class="col" id="devBurgs">
      <h3>Devoured Burgers</h3>

      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}



    </div>
  </div>
</div>
<hr>


